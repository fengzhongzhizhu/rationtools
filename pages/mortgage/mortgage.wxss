page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 15px;
}
.page__desc {
  text-indent: 2em;
  color: red;
}
.weui-navbar {
    border-bottom: 1rpx solid #e5e5e5;
    color: #333;
}
.weui-navbar__item.weui-bar__item_on{
    color: #333;
    font-weight: bold;
}
.weui-navbar__slider{
    background-color: #bfa253;
}
.weui-cell::before{
    border-top: 1rpx solid #e5e5e5;
    color: #e5e5e5;
}
.weui-label{
    font-size: 14px;
    color: #333;
    /* font-weight: 300; */
}
.weui-cell__ft{
    color: #333;
    font-size: 14px;
}
.weui-cells::before{
    border-top:none;
}
button[type=primary]{
    background-color: #cb1e36;
    font-size: 15px;
}